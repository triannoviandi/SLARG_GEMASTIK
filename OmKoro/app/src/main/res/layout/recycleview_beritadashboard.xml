<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:stateListAnimator="@animator/touch"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/beritadashboard_img"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:src="@drawable/b2"
            android:scaleType="centerCrop"
            android:layout_marginRight="16dp"
            />
        <TextView
            android:id="@+id/beritadashboard_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/beritadashboard_img"
            android:text="BNPB: 2.113 Orang Tewas Akibat Gempa Sulteng, 1.309 Hilang"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/colorPrimaryDark"
            android:maxLines="3"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/beritadashboard_waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/beritadashboard_img"
            android:layout_below="@+id/beritadashboard_judul"
            android:text="6 Jam yang Lalu"
            android:fontFamily="@font/opensans_regular"
            android:textColor="#8B8B8B"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/beritadashboard_oleh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/beritadashboard_img"
            android:layout_below="@+id/beritadashboard_waktu"
            android:text="Oleh "
            android:fontFamily="@font/opensans_regular"
            android:textColor="#8B8B8B"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/beritadashboard_pembuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/beritadashboard_oleh"
            android:layout_below="@+id/beritadashboard_waktu"
            android:text="Trian Noviandi"
            android:fontFamily="@font/opensans_regular"
            android:textColor="#8B8B8B"
            android:textSize="12sp"/>

    </RelativeLayout>

    <View
        android:id="@+id/pemerintah_hr2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#BDBDBD"
        />

    <LinearLayout
        android:id="@+id/pemerintah_viewEnd"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#fff"
        android:orientation="vertical"
        />

</LinearLayout>

