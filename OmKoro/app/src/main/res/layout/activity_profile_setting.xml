<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingBottom="100dp"
            tools:context=".view.ui.login.ProfileSettingActivity">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atur Foto Profil"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/opensans_regular"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_imgPhoto"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:src="@drawable/profile"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/profile_btnAmbilFoto"
                    android:layout_width="150dp"
                    android:layout_height="36dp"
                    android:textSize="12sp"
                    android:text="Ambil foto"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/opensans_regular"
                    android:background="@drawable/buttonprimary"
                    android:textColor="#fff"
                    />

                <Button
                    android:id="@+id/profile_btnBukaGallery"
                    android:layout_width="150dp"
                    android:layout_height="36dp"
                    android:textSize="12sp"
                    android:text="Buka Galeri"
                    android:fontFamily="@font/opensans_regular"
                    android:background="@drawable/buttonprimary"
                    android:textColor="#fff"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Pribadi"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/opensans_regular"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/profile_edtNama"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Lengkap"
                android:layout_marginTop="16dp"
                app:met_floatingLabel="highlight"
                android:textSize="14sp"
                android:fontFamily="@font/opensans_regular"
                />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/profile_edtNip"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIP"
                android:inputType="number"
                app:met_floatingLabel="highlight"
                android:textSize="14sp"
                android:fontFamily="@font/opensans_regular"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/profile_edtNik"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIK"
                android:inputType="number"
                app:met_floatingLabel="highlight"
                android:textSize="14sp"
                android:fontFamily="@font/opensans_regular"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/profile_edtNoHp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor HP"
                android:inputType="phone"
                app:met_floatingLabel="highlight"
                android:textSize="14sp"
                android:fontFamily="@font/opensans_regular"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempat Tinggal"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/opensans_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provinsi"
                android:layout_gravity="left"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="12sp"
                android:textColor="#979797"
                android:fontFamily="@font/opensans_regular"/>

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/profile_spinnerProvinsi"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:ms_background_color="#f0f1f5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kab/Kota"
                android:layout_gravity="left"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="12sp"
                android:textColor="#979797"
                android:fontFamily="@font/opensans_regular"/>

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/profile_spinnerKota"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                app:ms_background_color="#f0f1f5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/profile_edtAlamat"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat"
                android:layout_marginTop="16dp"
                app:met_floatingLabel="highlight"
                android:textSize="14sp"
                android:fontFamily="@font/opensans_regular"
                />

            <Button
                android:id="@+id/profile_btnSelesai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/buttonprimary"
                android:textColor="#fff"
                android:fontFamily="@font/opensans_bold"
                android:layout_marginTop="32dp"
                android:text="Selesai"
                />

        </LinearLayout>
</ScrollView>
