<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rv_beritahome"
    android:stateListAnimator="@animator/touch"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:layout_marginRight="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:stateListAnimator="@animator/touch"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/recycleview_berita_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                app:riv_corner_radius="5dp"
                android:src="@drawable/b5"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:padding="8dp"
                android:background="#80252a41">

                <TextView
                    android:id="@+id/recycleview_berita_judul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pembagian sembako tidak merata di Palu, BMKG Menghibbau untuk melakukan"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:maxLines="2"
                    android:fontFamily="@font/opensans_bold"
                    />


            </LinearLayout>


        </FrameLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>