<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="16dp"
    tools:context=".view.ui.beranda.BeritaInput">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Berita"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:fontFamily="@font/opensans_bold"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#BDBDBD" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/inputBerita_tvJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Judul Berita"
            android:layout_marginTop="32dp"
            app:met_floatingLabel="highlight"
            android:textSize="14sp"
            android:fontFamily="@font/opensans_regular"
            android:textAlignment="textStart"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/inputBerita_tvIsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi berita"
            android:inputType="textMultiLine"
            android:gravity="bottom"
            app:met_floatingLabel="highlight"
            android:textSize="14sp"
            android:minLines="2"
            android:maxLines="20"
            android:scrollbars="vertical"
            android:fontFamily="@font/opensans_regular"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan Gambar"
            android:layout_gravity="left"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="6dp"
            android:textSize="12sp"
            android:fontFamily="@font/opensans_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/inputBerita_btnUploadGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Gallery"
                android:fontFamily="@font/opensans_regular"
                android:textSize="10sp"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/colorPrimaryDark"/>
            <Button
                android:id="@+id/inputBerita_btnUploadCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buka Kamera"
                android:textSize="10sp"
                android:fontFamily="@font/opensans_regular"
                android:backgroundTint="@color/colorPrimaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/inputBerita_berhasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/inputBerita_Preview"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Berhasil Mengupload!"
                android:layout_gravity="left"
                android:layout_marginBottom="6dp"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:fontFamily="@font/opensans_regular"/>

        </LinearLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Berita"
            android:layout_gravity="left"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="6dp"
            android:textSize="12sp"
            android:fontFamily="@font/opensans_regular"/>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/inputBerita_SpinnerJenis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_background_color="#F8F8F8"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/colorPrimaryDark"
            app:ms_text_color="@color/colorPrimaryDark"
            />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/inputBerita_llLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/inputBerita_btnLokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi Bantuan"
                android:textColor="#fff"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:fontFamily="@font/opensans_regular"
                android:drawableStart="@drawable/ic_location_on_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Masukkan Lokasi Bantuan"
                android:textSize="10sp"
                android:layout_marginStart="16dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/inputBerita_btnKirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonprimary"
            android:textColor="#fff"
            android:fontFamily="@font/opensans_bold"

            android:layout_marginTop="32dp"
            android:text="Kirim"
            />

    </LinearLayout>

</ScrollView>